{
  "name": "cwrc-server",
  "version": "0.0.0",
  "license": "GPL-2.0",
  "scripts": {
    "start": "nodemon ./build/www",
    "build": "browserify bin/www -o build/www --debug --verbose -t [ babelify --presets [ @babel/preset-env ]",
    "test": "mocha spec -w",
    "test:single": "istanbul cover -x ./app.js _mocha -- -R spec spec",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "check-coverage": "istanbul check-coverage --statements 5 --branches 5 --functions 5 --lines 5",
    "cm": "git-cz"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cwrcgit": "^2.0.2",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "babel-cli": "^6.26.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "codecov": "^3.0.4",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "github": "^14.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "js-cookie": "^2.2.0",
    "mocha": "^5.2.0",
    "nock": "^9.6.1",
    "nodemon": "^1.18.3",
    "request": "^2.88.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
